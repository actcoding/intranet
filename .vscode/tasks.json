{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Backend",
            "detail": "Boots the Laravel server",
            "type": "shell",
            "command": "./artisan serve",
            "osx": {
                "command": "php artisan serve"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "none",
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Frontend",
            "detail": "Boots the Frontend development server",
            "type": "shell",
            "command": "bun run dev",
            "options": {
                "cwd": "frontend",
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "none"
        },
        {
            "label": "Scheduler",
            "detail": "Boots the Laravel scheduler worker",
            "type": "shell",
            "command": "./artisan schedule:work",
            "osx": {
                "command": "php artisan schedule:work"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "none",
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Queue",
            "detail": "Boots the Laravel Queue worker",
            "type": "shell",
            "command": "./artisan queue:work",
            "osx": {
                "command": "php artisan queue:work"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "none",
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Services",
            "detail": "Boots required 3rd party services using docker compose",
            "type": "shell",
            "command": "docker compose up",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "none",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Dev",
            "detail": "Boots all components of the application",
            "problemMatcher": [],
            "dependsOn": [
                "Backend",
                "Frontend",
                "Scheduler",
                "Queue",
                "Open Browser"
            ]
        },
        {
            "label": "Start backend",
            "problemMatcher": [],
            "dependsOn": [
                "Backend",
                "Scheduler",
                "Queue"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Open Browser",
            "hide": true,
            "type": "shell",
            "linux": {
                "command": "xdg-open http://localhost:3000",
            },
            "osx": {
                "command": "open http://localhost:3000"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            },
            "group": "none",
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Migrate",
            "detail": "Run database migrations",
            "type": "shell",
            "command": "./artisan migrate",
            "osx": {
                "command": "php artisan migrate"
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            }
        },
        {
            "label": "Reset database",
            "detail": "Reset and seed the database",
            "type": "shell",
            "command": "./artisan migrate:fresh --seed",
            "osx": {
                "command": "php artisan migrate:fresh --seed"
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
        },
        {
            "label": "Clear Cache",
            "detail": "Clear cached data",
            "type": "shell",
            "command": "./artisan optimize:clear",
            "osx": {
                "command": "php artisan optimize:clear"
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            }
        },
        {
            "label": "Gen API Client",
            "detail": "Generate an API client for the Frontend to use",
            "type": "shell",
            "command": "bash gen-api-client.sh",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            },
        },
    ],
}
